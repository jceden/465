<h1>Editing image</h1>
<%= form_for(@image) do |f| %>
<%= f.file_field :update%>
<p>
	<%= image_tag root_url + "/images/" + @image.filename, size: "100x100", alt: @image.filename %>
<br>
</p>
<div class="field">
	<%= f.label :private %><br>
	<%= f.check_box :private %>
</div>
<div class ="actions">
<br>
	<%= f.submit %>
</div>
<%end%>&nbsp&nbsp
<%= button_to "delete", @image, :method => :delete, data: {confirm: 'Are you fuckin sure you want to delete this shit?'}%>
<br>
<%= link_to 'Show', @image %> |
<%= link_to 'Back', images_path %>
